@import '../vars.styl'
@import '../basic.styl'

.gallery
  max-width: 1024px
  width: 90%
  margin: auto
  outline: none
  .item
    position: relative
    cursor: pointer
    z-index: 0
    flex(1 1 auto)
    panel()
    margin: 10px
    padding: 10px
    &:after
      content: " "
      display: block
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
    .inner
      width: 100%
      height: 100%
  .line
    height: 130px
  .item
    max-width: 320px
    width: 320px
    height: 110px
  .line
    height: 180px
  .item
    max-width: 490px
    width: 490px
    height: 160px
