@import '../vars.styl'
@import '../basic.styl'

.gallery
  max-width: 1024px
  width: 90%
  margin: auto
  outline: none
  .item
    position: relative
    cursor: pointer
    z-index: 0
    flex(1 1 auto)
    panel()
    margin: 10px
    padding: 0px
    overflow: hidden
    &:after
      content: " "
      display: block
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
    .inner
      width: 100%
      height: 100%
    svg
      will-change: transform, opacity
  .line
    height: 180px
    justify-content: center
  .item
    max-width: 490px
    width: 490px
    height: 160px

@media(max-width: 1200px)
  .gallery
    .item
      max-width: 400px
      width: 400px

@media(max-width: 991px)
  .gallery
    .item
      max-width: 300px
      width: 300px

@media(max-width:768px)
  .gallery
    .line
      height: auto
    .item
      max-width: 490px
      height: 160px
