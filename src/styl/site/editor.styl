@import '../vars.styl'
@import '../basic.styl'

body.editing
  overflow: hidden

#editor
  .col-6, .col-4, .col-12
    margin-bottom: 10px
  label
    text-transform: capitalize
    width: 100%
    display: inline-block
    text-overflow: ellipsis
    white-space: nowrap
    overflow: hidden
  position: fixed
  top: -75px
  left: 0
  width: 100%
  height: 75px
  z-index: index(order, 'editor')
  background: unquote('url(data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIxMCIgaGVpZ2h0PSIxMCIgdmlld0JveD0iMCAwIDEwIDEwIj48cGF0aCBkPSJNLTEwIC0xMEwyMCAyME0tMjAgLTEwTDEwIDIwTS0xMCAtMjBMMjAgMTAiIHN0cm9rZT0iI2ZhZmJmYyIgc3Ryb2tlLXdpZHRoPSIxIi8+PC9zdmc+)') #fff
  font-size: .8em
  padding: 0 0 10px
  overflow: hidden
  box-shadow: 0 1px 2px rgba(0,0,0,.2)
  transition: all 0.3s ease-in-out
  .config
    padding: 10px 0 0
    border-bottom: 1px solid #ccc
    background: rgba(255,255,255,.6)
  .footer
    padding: 30px 0
    background: rgba(255,255,255,.6)
    border-top: 1px solid #ccc
    position: fixed
    z-index: -1
    opacity: 0
    width: 100%
    bottom: -100px
    transition: all 0.3s ease-in-out
    .btn-group
      width: 300px
      .btn
        flex-grow: 1
  label
    margin-bottom: 0
  &.on
    top: 0
  .empty
    width: 100%
    height: 100%
    text-align: center
    color: #999
    display: table
    &:after
      content: "no custom options"
      display: table-cell
      vertical-align: middle

@media(max-width: 576px)
  #editor
    top: -140px
    height: 140px


#cooltext
  width: 100%
  //-width: 600px
  height: 170px
  position: absolute
  z-index: -1
  top: 50%
  left: 50%
  transform: translate(-50%,-50%)
  opacity: 0
  transition: opacity 0.3s ease-in-out

#cooltext svg
  display: block
  margin: auto
  //-width: 600px
  width: 100%

body.editing
  #editor
    height: 100%
    top: 0
  .gallery .item svg
    visibility: hidden
  #editor
    .footer
      opacity: 1
      z-index: 1
      bottom: 0
      position: fixed
  #cooltext
    opacity: 1
    position: fixed

.full-picker > .inner
  position: fixed
  width: 90%
  height: 90%
  top: 0
  left: 0
  right: 0
  bottom: 0
  margin: auto
  background: #fff

.ldColorPicker
  z-index: index(order, 'ldcp')

#svg-work-area
  overflow: hidden
  height: 1px
  width: 0

#download.modal .card
  centered()
  width: 90%
  max-width: 640px
  height: 380px
  text-align: center
  .result
    background: center center no-repeat
    background-size: contain
    margin: auto
    min-height: 200px
    img
      position: absolute
      left: -600px
      right: -600px
      top: -50px
      bottom: -50px
      margin: auto

