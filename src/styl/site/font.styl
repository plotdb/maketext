#font-picker
  .line > .inner
    flexbox()
    flex-wrap(no-wrap)
    width: 100%
    .item
      flex(1 1 auto)
      width: 276px
      height: 110px
      padding: 8px
      .img
        width: 100%
        height: 25px
        margin: 10px 0 20px
        background: url(/assets/fonts/all.png) center center no-repeat
      .inner
        panel()
        cursor: pointer
        padding: 8px
        width: 100%
        height: 100%
        background: #fff
        text-align: center
        position: relative
        &:after
          content: " "
          display: block
          z-index: 1
          position: absolute
          top: 0
          left: 0
          width: 100%
          height: 100%
