+keyframes(popup)
  0%
    opacity: 0
    transform: scale(0.9)
    animation-timing-function: ease-in
  50%
    opaicty: 1
    transform: scale(0.93)
    animation-timing-function: ease-out
  100%
    opaicty: 1
    transform: scale(1)
    animation-timing-function: linear

+keyframes(popup-alt)
  0%
    opacity: 0
    transform: scale(0.9)
    animation-timing-function: ease-in
  50%
    opaicty: 1
    transform: scale(0.93)
    animation-timing-function: ease-out
  100%
    opaicty: 1
    transform: scale(1.3)
    animation-timing-function: linear

#landing
  width: 100%
  height: 100%
  background: #fff
  position: relative
  margin-bottom: 30px
  h1
    font-size: 3em
  .inner
    text-align: center
    height: 400px
    centered()
  .input-group
    width: 420px
    max-width: 90%
    margin: auto
  .inner *
    animation(popup 1.0s ease-in-out 1)
  .inner .input-group
    animation(popup-alt 1.0s ease-in-out 1)
