+keyframes(popup)
  0%
    opacity: 0
    transform: translate(0,90px) scale(0.9)
    animation-timing-function: ease-in
  50%
    opaicty: 1
    transform: translate(0,30px) scale(0.93)
    animation-timing-function: ease-out
  100%
    opaicty: 1
    transform: translate(0,0) scale(1)
    animation-timing-function: linear

#landing
  width: 100%
  height: 100%
  position: relative
  margin-bottom: 30px
  will-change: transform, opacity
  background: unquote('url(data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIxMCIgaGVpZ2h0PSIxMCIgdmlld0JveD0iMCAwIDEwIDEwIj48cGF0aCBkPSJNLTEwIC0xMEwyMCAyME0tMjAgLTEwTDEwIDIwTS0xMCAtMjBMMjAgMTAiIHN0cm9rZT0iI2YzZjRmNSIgc3Ryb2tlLXdpZHRoPSIxIi8+PC9zdmc+)') #fff fixed
  border-bottom: 1px solid #ccc
  .share
    position: absolute
    top: 10px
    right: 20px
    font-size: 1.5em
  .subtitle
    border-bottom: 1px solid #ccc
    display: inline-block
    padding: 10px 30px
    margin: 0 0 10px
  h1
    font-size: 5em
    span
      filter: url(#landing-h1)
      text-shadow: 0 2px 4px rgba(0,0,0,.2)
      background: -webkit-linear-gradient(left, #9400f0, #3799ff, #00ffa1)
      -webkit-background-clip: text
      -webkit-text-fill-color: transparent
      color: #00f
    position: relative
    img
      width: 135px
      position: absolute
      top: -80px
      margin-left: -130px
  .inner
    text-align: center
    height: 400px
    centered()
  .input-group
    width: 420px
    max-width: 90%
    margin: auto
    .input-group-append
      width: 150px
  .inner .subtitle, .inner h1
    animation(popup .5s ease-in-out 1)
  .inner .widget
    animation(popup .5s ease-in-out 1)
  .inner .input-group
    border-radius: 5px
    box-shadow: 0 7px 12px -2px rgba(144,240,180,.5)
    transform: scale(1.4)
    input
      border: 1px solid #93f9b9
      &::placeholder
        color: #bed
      &:focus
        box-shadow: none!important

#subscribe
  background: unquote('url(data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIxMCIgaGVpZ2h0PSIxMCIgdmlld0JveD0iMCAwIDEwIDEwIj48cGF0aCBkPSJNLTEwIC0xMEwyMCAyME0tMjAgLTEwTDEwIDIwTS0xMCAtMjBMMjAgMTAiIHN0cm9rZT0iI2ZhZmJmYyIgc3Ryb2tlLXdpZHRoPSIxIi8+PC9zdmc+)') #fdfffe
  box-shadow: 0 15px 20px rgba(0,0,0,.1)
  .btn
    position: relative
  .btn:after
    content: ""
    display: block
    position: absolute
    right: 15px
    top: 11px
    font: normal normal normal 24px/1 FontAwesome

+keyframes(rotate)
  0%
    transform: rotate(0)
  50%
    transform: rotate(180deg)
  100%
    transform: rotate(360deg)

#subscribe.loading
  .btn:after
    content: "\f110"
    animation(rotate 1s linear infinite)

#subscribe.done
  .btn:after
    content: "\f00c"

#subscribe.fail
  .btn:after
    content: "\f00d"
    color: #f00

@media(max-width: 576px)
  #landing
    .share
      top: auto
      bottom: 20px
      font-size: 1em
    h1
      font-size: 3.5em
      img
        width: 120px
        top: -120px
        margin-left: -80px
    .inner .input-group
      max-width: 240px
      width: 90%
      display: block
      box-shadow: none
      .input-group-append, input
        width: 90%
        border-radius: 5px
        margin: 0 auto 10px
      .btn
        border-radius: 5px

