svg(xmlns="http://www.w3.org/2000/svg",viewBox="0 0 500 150")
  defs
    filter#stripe-bk(filterUnits="userSpaceOnUse",x="-100%",y="-100%",width="300%",height="300%")
      feFlood(flood-color="#700f0f",result="flood1")
      feFlood(flood-color="#fff",flood-opacity="0.5",result="flood2")
      feImage(href='data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" width="1000px" height="1000px"><defs><pattern id="pattern" patternUnits="userSpaceOnUse" width="10" height="10"><path d="M0,8.239V10h1.761L0,8.239z"/><path d="M5,0l5,5l0,0V3.238L6.762,0H5z"/><polygon points="0,3.239 0,5 5,10 6.761,10 "/><polygon points="1.762,0 0,0 10,10 10,8.238 "/></pattern></defs><rect x="0" y="0" width="100%" height="100%" fill="url(#pattern)"/></svg>',x="0",y="0",width="1000",height="1000",result="image")
