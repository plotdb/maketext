//- module
doctype html
- var navbar = true
- var debug = false
- var version = "0"
- var thumbnail = "https://maketext.io/assets/img/thumbnail.png"
- var thumbtype = "image/png"
- var thumb_width = "1200"
- var thumb_height = "630"
- var favicon = "/assets/img/favicon.png"
- var title = "maketext.io - Make Yourself Some Awesome Cool Text"
- var description = "a modern cool text generator that gives you PNG / SVG output"
- var rootid = ""
- var rootclass = ""
html(lang="en")
  include /mixins/index.jade
  block vars
  head(prefix="og: http://ogp.me/ns#")
    include /module/head.jade
    +css("/css/pack/base.css")
    block head
  body(id=rootid,class=rootclass)
    +script("/js/pack/base.js")
    +script("/js/global.js")
    if navbar
      include /nav.jade
    include /auth/panel.jade
    //-#notifications
      .notify(ng-repeat="n in notifications",ng-class="'notify-'+n.type",ng-cloak) {{n.message}}
    block body
    if !debug
      include /module/ga.jade
